<h1>Editing Book</h1>

<% if @book.errors.any? %>
　 <h4><%= '2 errors prohibited this book from being saved:' %></h4>
　 <li>Title can't be blank</li>
　 <li>Body can't be blank</li>
 <% end %>

<%= form_with model: @book do |f| %>
<p class="edit-title">Title<br><%= f.text_field :title %></br></p>

<p class="edit-body">Body<br><%= f.text_area :body %></br></p>

<p class="edit-update"><%= f.submit 'Update Book' %></p>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
<% end %>